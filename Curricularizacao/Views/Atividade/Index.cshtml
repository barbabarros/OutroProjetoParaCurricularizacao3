@model List<Curricularizacao.Models.Atividade>
@{
    ViewData["Title"] = "Atividades";
}

<a asp-action="Create" class="btn btn-primary">Adicionar Atividade</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var atividade in Model)
        {
            <tr>
                <td>@atividade.Id</td>
                <td>@atividade.Descricao</td>
                <td>
                    <a asp-action="Details" asp-route-id="@atividade.Id" class="btn btn-info">Detalhes</a> | 
                    <a asp-action="Edit" asp-route-id="@atividade.Id" class="btn btn-warning">Editar</a> | 
                    <a asp-action="Delete" asp-route-id="@atividade.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>