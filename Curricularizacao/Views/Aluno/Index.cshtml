@model List<Curricularizacao.Models.Aluno>
@{
    ViewData["Title"] = "Alunos";
}

<a asp-action="Create" class="btn btn-primary">Adicionar Aluno</a>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Nome</td>
                <td>@aluno.Endereco</td>
                <td>@aluno.Telefone</td>
                <td>@(aluno.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-info">Editar</a> |
                    <a asp-action="Details" asp-route-id="@aluno.Id" class="btn btn-warning">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@aluno.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
