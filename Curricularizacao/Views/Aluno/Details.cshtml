@model Curricularizacao.Models.Aluno
@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<h2>Detalhes do Aluno</h2>
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Endereco</dd>

        <dt class="col-sm-2">Número do Endereço</dt>
        <dd class="col-sm-10">@Model.NumeroEndereco</dd>

        <dt class="col-sm-2">Nome da Mãe</dt>
        <dd class="col-sm-10">@Model.NomeMae</dd>

        <dt class="col-sm-2">Nome do Pai</dt>
        <dd class="col-sm-10">@Model.NomePai</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>

        <dt class="col-sm-2">Data de Nascimento</dt>
        <dd class="col-sm-10">@Model.DataNascimento.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
